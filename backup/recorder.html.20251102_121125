<body>
    <div class="container">
        <div class="header">
            <h1>üé• Screen Recorder</h1>
            <p>Registra schermo, finestre e tab del browser</p>
        </div>

        <div class="tabs">
            <button class="tab active" onclick="switchTab('recorder')">üé• Registra</button>
            <button class="tab" onclick="switchTab('recordings')">üìÅ Registrazioni</button>
        </div>

        <!-- Tab Registrazione -->
        <div id="tab-recorder" class="tab-content active">
            <div class="card">
                <h2>üé• Registrazione Schermo</h2>

                <div class="alert alert-info">
                    <strong>‚ÑπÔ∏è Come funziona:</strong><br>
                    1. Clicca "Avvia Registrazione"<br>
                    2. Il Browser mostra popup: scegli <strong>Scheda/Finestra/Schermo</strong><br>
                    3. Attiva/disattiva <strong>"Condividi audio"</strong> nel popup<br>
                    4. La registrazione parte automaticamente
                </div>

                <div class="recording-indicator" id="recording-indicator">
                    <div class="rec-dot"></div>
                    <div class="status-info">
                        <h3>üî¥ Registrazione in corso</h3>
                        <p>Durata: <span id="duration">00:00</span></p>
                    </div>
                    <button class="btn btn-danger" onclick="stopRecording()">‚èπÔ∏è Ferma Registrazione</button>
                </div>

                <div class="controls">
                    <div class="control-group">
                        <label>üìπ Qualit√† Video</label>
                        <select id="video-quality">
                            <option value="1280x720">HD 720p (Veloce)</option>
                            <option value="1920x1080" selected>Full HD 1080p (Consigliato)</option>
                            <option value="2560x1440">2K 1440p (Alta qualit√†)</option>
                            <option value="3840x2160">4K 2160p (Massima qualit√†)</option>
                        </select>
                    </div>

                    <div class="control-group">
                        <label>‚öôÔ∏è Frame Rate</label>
                        <select id="framerate">
                            <option value="24">24 FPS (Cinema)</option>
                            <option value="30" selected>30 FPS (Standard)</option>
                            <option value="60">60 FPS (Smooth)</option>
                        </select>
                    </div>
                </div>

                <button class="btn btn-primary" id="btn-start" onclick="startRecording()">
                    üé¨ Avvia Registrazione
                </button>

                <video id="preview" style="width: 100%; margin-top: 20px; display: none; border-radius: 10px; box-shadow: 0 4px 20px rgba(0,0,0,0.2);" autoplay muted></video>
            </div>
        </div>

        <!-- Tab Registrazioni -->
        <div id="tab-recordings" class="tab-content">
            <div class="card">
                <h2>üìÅ Registrazioni Salvate</h2>

                <div style="display: flex; gap: 10px; margin-bottom: 20px;">
                    <button class="btn btn-primary btn-small" onclick="loadRecordings()">
                        üîÑ Ricarica Lista
                    </button>
                    <button class="btn btn-danger btn-small" onclick="deleteAllRecordings()" style="background: #dc3545;">
                        üóëÔ∏è Elimina Tutto
                    </button>
                </div>

                <div class="recordings-list" id="recordings-list">
                    <p style="text-align: center; color: #6c757d; padding: 40px;">Nessuna registrazione disponibile</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        let mediaRecorder = null;
        let recordedChunks = [];
        let recordingStartTime = null;
        let durationInterval = null;
        let currentStream = null;

        // Switch tra tab
        function switchTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.tab').forEach(el => el.classList.remove('active'));
            document.getElementById(`tab-${tabName}`).classList.add('active');
            event.target.classList.add('active');

            // Auto-carica registrazioni quando si apre quel tab
            if (tabName === 'recordings') {
                loadRecordings();
            }
        }

        // ========== REGISTRAZIONE ==========

        async function startRecording() {
            try {
                const quality = document.getElementById('video-quality').value;
                const framerate = parseInt(document.getElementById('framerate').value);
                const [width, height] = quality.split('x').map(Number);

                // Configurazione cattura schermo
                // L'audio sar√† gestito dal popup Chrome (utente sceglie se attivarlo)
                const displayMediaOptions = {
                    video: {
                        cursor: 'always',
                        width: { ideal: width },
                        height: { ideal: height },
                        frameRate: { ideal: framerate, max: 60 }
                    },
                    audio: true  // Chiedi audio, ma utente pu√≤ disattivarlo dal popup
                };

                // Richiedi cattura schermo (mostra popup Chrome)
                const screenStream = await navigator.mediaDevices.getDisplayMedia(displayMediaOptions);

                currentStream = screenStream;

                // Mostra preview
                const preview = document.getElementById('preview');
                preview.srcObject = screenStream;
                preview.style.display = 'block';

                // Setup MediaRecorder
                recordedChunks = [];

                // Scegli codec migliore disponibile
                let mimeType = 'video/webm;codecs=vp9';
                if (!MediaRecorder.isTypeSupported(mimeType)) {
                    mimeType = 'video/webm;codecs=vp8';
                }
                if (!MediaRecorder.isTypeSupported(mimeType)) {
                    mimeType = 'video/webm';
                }

                // Calcola bitrate in base alla qualit√†
                const bitrates = {
                    '1280x720': 2500000,   // 2.5 Mbps
                    '1920x1080': 5000000,  // 5 Mbps
                    '2560x1440': 8000000,  // 8 Mbps
                    '3840x2160': 15000000  // 15 Mbps
                };

                mediaRecorder = new MediaRecorder(screenStream, {
                    mimeType: mimeType,
                    videoBitsPerSecond: bitrates[quality] || 5000000
                });

                mediaRecorder.ondataavailable = (event) => {
                    if (event.data.size > 0) {
                        recordedChunks.push(event.data);
                    }
                };

                mediaRecorder.onstop = saveRecording;

                // Ferma automaticamente se utente chiude condivisione dal popup
                screenStream.getVideoTracks()[0].addEventListener('ended', () => {
                    console.log('üõë Utente ha fermato condivisione dal browser');
                    stopRecording();
                });

                mediaRecorder.start(1000); // Chunk ogni 1 secondo

                // UI
                document.getElementById('recording-indicator').classList.add('active');
                document.getElementById('btn-start').disabled = true;

                // Timer
                recordingStartTime = Date.now();
                durationInterval = setInterval(updateDuration, 1000);

                console.log('‚úÖ Registrazione avviata con codec:', mimeType);

            } catch (error) {
                console.error('Errore start recording:', error);

                if (error.name === 'NotAllowedError') {
                    alert('‚ùå Permesso negato. Devi autorizzare la cattura schermo.');
                } else if (error.name === 'NotFoundError') {
                    alert('‚ùå Nessuna sorgente disponibile per la cattura.');
                } else {
                    alert('‚ùå Errore: ' + error.message);
                }
            }
        }

        function stopRecording() {
            if (!mediaRecorder || mediaRecorder.state === 'inactive') return;

            mediaRecorder.stop();

            // Ferma tutti i track
            if (currentStream) {
                currentStream.getTracks().forEach(track => track.stop());
            }

            // Nascondi preview
            const preview = document.getElementById('preview');
            preview.style.display = 'none';
            preview.srcObject = null;

            // UI
            document.getElementById('recording-indicator').classList.remove('active');
            document.getElementById('btn-start').disabled = false;

            clearInterval(durationInterval);

            console.log('üõë Registrazione fermata');
        }

        async function saveRecording() {
            if (recordedChunks.length === 0) {
                alert('‚ùå Nessun dato registrato');
                return;
            }

            const blob = new Blob(recordedChunks, {
                type: 'video/webm'
            });

            const sizeM = (blob.size / 1024 / 1024).toFixed(1);
            console.log(`üíæ Salvando ${sizeM}MB...`);

            // Genera nome file
            const now = new Date();
            const year = now.getFullYear();
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const day = String(now.getDate()).padStart(2, '0');
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');

            const timestamp = `${year}-${month}-${day}_${hours}-${minutes}-${seconds}`;
            const filename = `recording_${timestamp}.webm`;

            // Upload al server (NO download automatico)
            try {
                console.log('üì§ Upload al server...');

                const formData = new FormData();
                formData.append('file', blob, filename);

                const response = await fetch('/api/upload', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    const data = await response.json();
                    console.log('‚úÖ Upload server completato:', data);
                    alert(`‚úÖ Registrazione salvata! (${sizeM}MB)\nDisponibile in "Registrazioni"`);

                    // Auto-ricarica lista registrazioni se siamo su quel tab
                    if (document.getElementById('tab-recordings').classList.contains('active')) {
                        loadRecordings();
                    }
                } else {
                    console.warn('‚ö†Ô∏è Upload server fallito');
                    alert(`‚ö†Ô∏è Upload al server fallito. Prova a salvare manualmente.`);
                }
            } catch (error) {
                console.error('Errore upload server:', error);
                alert(`‚ö†Ô∏è Errore upload al server: ${error.message}`);
            }

            recordedChunks = [];
        }

        function updateDuration() {
            const elapsed = Math.floor((Date.now() - recordingStartTime) / 1000);
            const minutes = Math.floor(elapsed / 60);
            const seconds = elapsed % 60;
            const timeStr = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
            document.getElementById('duration').textContent = timeStr;
        }

        // ========== RECORDINGS LIST ==========

        async function loadRecordings() {
            try {
                const response = await fetch('/api/files');
                const data = await response.json();

                const container = document.getElementById('recordings-list');
                container.innerHTML = '<p style="text-align: center; color: #6c757d;">Caricamento...</p>';

                const recordings = data.files.filter(f => f.name.startsWith('recording_') || f.name.includes('_output'));

                if (recordings.length === 0) {
                    container.innerHTML = '<p style="text-align: center; color: #6c757d; padding: 40px;">Nessuna registrazione disponibile</p>';
                    return;
                }

                container.innerHTML = '';

                // Carica durata per ogni video
                for (const rec of recordings) {
                    const div = document.createElement('div');
                    div.className = 'recording-item';

                    const sizeM = (rec.size / 1024 / 1024).toFixed(1);
                    const date = new Date(rec.modified * 1000).toLocaleString('it-IT');

                    // Ottieni durata video
                    const duration = await getVideoDuration(rec.path);
                    const durationStr = duration ? formatDuration(duration) : 'N/A';

                    div.innerHTML = `
                        <div class="recording-info">
                            <h4>üìπ ${rec.name}</h4>
                            <p>Durata: ${durationStr} | Dimensione: ${sizeM}MB | ${date}</p>
                        </div>
                        <div style="display: flex; gap: 10px;">
                            <button class="btn btn-primary btn-small" onclick="downloadFile('${rec.path}', '${rec.name}')">
                                ‚¨áÔ∏è Download
                            </button>
                            <button class="btn btn-danger btn-small" onclick="deleteRecording('${rec.name}')" style="background: #dc3545;">
                                üóëÔ∏è Elimina
                            </button>
                        </div>
                    `;
                    container.appendChild(div);
                }

            } catch (error) {
                alert('‚ùå Errore caricamento: ' + error.message);
            }
        }

        // Ottieni durata video
        function getVideoDuration(videoUrl) {
            return new Promise((resolve) => {
                const video = document.createElement('video');
                video.preload = 'metadata';

                video.onloadedmetadata = function() {
                    window.URL.revokeObjectURL(video.src);
                    resolve(video.duration);
                };

                video.onerror = function() {
                    resolve(null);
                };

                video.src = videoUrl;
            });
        }

        // Formatta durata in mm:ss
        function formatDuration(seconds) {
            // Gestisci valori invalidi
            if (!seconds || seconds <= 0 || !isFinite(seconds) || isNaN(seconds)) {
                return 'N/A';
            }

            const hours = Math.floor(seconds / 3600);
            const minutes = Math.floor((seconds % 3600) / 60);
            const secs = Math.floor(seconds % 60);

            if (hours > 0) {
                return `${hours}:${String(minutes).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
            } else {
                return `${String(minutes).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
            }
        }

        // Forza download file invece di aprirlo
        function downloadFile(url, filename) {
            fetch(url)
                .then(response => response.blob())
                .then(blob => {
                    const blobUrl = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.style.display = 'none';
                    a.href = blobUrl;
                    a.download = filename;
                    document.body.appendChild(a);
                    a.click();
                    setTimeout(() => {
                        document.body.removeChild(a);
                        URL.revokeObjectURL(blobUrl);
                    }, 100);
                })
                .catch(error => {
                    console.error('Errore download:', error);
                    alert('‚ùå Errore durante il download');
                });
        }

        // Elimina singola registrazione
        async function deleteRecording(filename) {
            if (!confirm(`Eliminare "${filename}"?`)) {
                return;
            }

            try {
                const response = await fetch(`/api/delete/${encodeURIComponent(filename)}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    alert('‚úÖ File eliminato!');
                    loadRecordings(); // Ricarica lista
                } else {
                    const error = await response.json();
                    alert('‚ùå Errore: ' + (error.detail || 'Eliminazione fallita'));
                }
            } catch (error) {
                console.error('Errore eliminazione:', error);
                alert('‚ùå Errore: ' + error.message);
            }
        }

        // Elimina tutte le registrazioni
        async function deleteAllRecordings() {
            if (!confirm('‚ö†Ô∏è ATTENZIONE: Eliminare TUTTE le registrazioni?\nQuesta azione √® irreversibile!')) {
                return;
            }

            try {
                const response = await fetch('/api/delete-all-recordings', {
                    method: 'DELETE'
                });

                if (response.ok) {
                    const data = await response.json();
                    alert(`‚úÖ ${data.deleted} file eliminati!`);
                    loadRecordings(); // Ricarica lista
                } else {
                    const error = await response.json();
                    alert('‚ùå Errore: ' + (error.detail || 'Eliminazione fallita'));
                }
            } catch (error) {
                console.error('Errore eliminazione:', error);
                alert('‚ùå Errore: ' + error.message);
            }
        }

        // Carica lista al load
        if (document.getElementById('tab-recordings').classList.contains('active')) {
            loadRecordings();
        }
    </script>
</body>
</html>
